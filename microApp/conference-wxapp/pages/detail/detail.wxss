.detail-head{position: relative;}
.detail-head .head-bg{width:100%;height:360rpx;filter:blur(20px);-webkit-filter:blur(20px);}
.detail-head .detail-title{
    position: absolute;
    font-size:19px;
    color:#fff;
    font-weight:bold;
    top:30rpx;
    left:8%;
    letter-spacing:2px;
    }
.detail-head .head-picture{width: 240rpx;height:160rpx;position: absolute;bottom: 30rpx;left: 446rpx;}
.detail-name{position: absolute;font-size:28rpx;color:#fff;left:8%;top:160rpx;}
.detail-time{position: absolute;font-size:28rpx;color:#fff;left:8%;top:240rpx;}
.detail-body{margin-top: 36rpx;padding-left: 48rpx;padding-right: 48rpx;}
.body-title{padding-left:20rpx;
    margin-top:40rpx;
    margin-bottom:20rpx;
    font-size:32rpx;
    font-weight:bold;
    color:#444;
    border-left:10rpx solid #47a86c;
    }
.detail-text{text-align:justify;
        font-size:32rpx;
        line-height:50rpx;
        color:#666;
        }
.tags-box .van-tag--medium{margin-left: 16rpx;}
