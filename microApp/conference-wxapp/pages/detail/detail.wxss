.collect .van-icon{float:right;margin-top:8rpx;margin-left:4rpx;}
.collectActive{position: absolute;bottom: -58rpx;right: 40rpx;color: rgb(228, 185, 12);}
.collectActive .van-icon{float:right;margin-top:8rpx;margin-left:4rpx;}
