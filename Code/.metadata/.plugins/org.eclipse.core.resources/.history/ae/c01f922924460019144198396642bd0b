var equipmentFailureOption = {
    tooltip: {
        trigger: 'item',
        formatter: "{b}: {c}"
    },
   
    series: [
        {
            name:'访问来源',
            type:'pie',
            selectedMode: 'single',
            radius: [0, '50%'],

            label: {
                normal: {
                    position: 'inner'
                }
            },
            labelLine: {
                normal: {
                    show: false
                }
            },
            data:[
                {value:645, name:'设备1'},
                {value:370, name:'设备2'},
                {value:600, name:'设备3'}
			],
			itemStyle:{
				normal:{
					color:function(params){
						var colorList = ['#175a71', '#22b6e9', '#1387ae'];
						return colorList[params.dataIndex]
						
					}
				}
			}
        },
        {
            name:'访问来源',
            type:'pie',
            radius: ['60%', '85%'],
            label: {
                normal: {
                    show:false,
                }
            },
            data:[
                {value:335, name:'设备1正常'},
                {value:310, name:'设备1故障'},
                {value:235, name:'设备2正常'},
                {value:135, name:'设备2故障'},
                {value:348, name:'设备3正常'},
                {value:252, name:'设备3故障'},
              
			],
			itemStyle:{
				normal:{
					color:function(params){
						if(params.dataIndex%2){
							return '#ccc'
						}else{
							return '#28c735'
