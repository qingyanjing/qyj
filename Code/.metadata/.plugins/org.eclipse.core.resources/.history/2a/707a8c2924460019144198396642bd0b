var cameraUtils = {
	 //根据摄像机视频流地址播放
	 playCamera:function (liveAddress){
		 if(liveAddress==""){
			 alert("视频设备播放地址为空.");
			 return;
		 }
		 cameraUtils.playLiveAddress(liveAddress);
	 },
	 //播放摄像机视频流地址
	 playLiveAddress:function (liveAddress){
		var vlc = document.getElementById("vlc");
　　　	try{
　　　		//清理数据列表
			vlc.playlist.clear();
			//根据视频流，加入播放列表，生成播放编号
	      	var playId=vlc.playlist.add(liveAddress);
			//根据编号播放
	　　　	vlc.playlist.playItem(playId);
　　　	}catch(e){
　　　		console.debug(e);
　　　	}
	 },
	 //停止播放
	 stopPlay:function (){
		 var vlc = document.getElementById("vlc");
		　vlc.playlist.stop();
	 },
	 //根据摄像机编号进行播放
	 playCameraById:function (cameraId){
		 if(cameraId==""||cameraId==null){
			 alert("视频设备编号为空.");
			 return;
		 }
		 var url=contextPath+"/rbx/sa/trafficSituation/getCamera.data";
		 var liveAddress="";
		 //根据视频设备获取视频信息，然后进行播放
		 $.post(url,{"cameraId":cameraId},function(data){
			 if(data!=null){
				 liveAddress=data.liveAddress;
				 if(liveAddress==""){
					 alert("视频设备播放地址为空.");
					 return;
				 }
				 cameraUtils.playCamera(liveAddress);
			 }
		 });
		
		 
	 }
}